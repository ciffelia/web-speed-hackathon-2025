{
  "private": true,
  "license": "MPL-2.0",
  "scripts": {
    "build": "wireit",
    "format": "wireit",
    "heroku-build": "wireit",
    "heroku-cleanup": "wireit",
    "heroku-start": "wireit",
    "lint": "wireit",
    "start": "wireit",
    "test": "wireit",
    "typecheck": "tsc --build"
  },
  "dependencies": {
    "wireit": "0.14.9"
  },
  "devDependencies": {
    "@tsconfig/strictest": "2.0.5",
    "@wsh-2025/configs": "workspace:*",
    "heroku": "10.4.0",
    "typescript": "5.7.2"
  },
  "packageManager": "pnpm@9.14.2+sha512.6e2baf77d06b9362294152c851c4f278ede37ab1eba3a55fda317a4a17b209f4dbb973fb250a77abc463a341fcb1f17f17cfa24091c4eb319cda0d9b84278387",
  "engines": {
    "node": "22.14.0"
  },
  "pnpm": {
    "overrides": {
      "es-abstract": "~1.23.9"
    },
    "patchedDependencies": {
      "shaka-player": "patches/shaka-player.patch"
    }
  },
  "wireit": {
    "lint": {
      "dependencies": [
        "./workspaces/schema:lint",
        "./workspaces/server:lint",
        "./workspaces/client:lint",
        "./workspaces/test:lint"
      ]
    },
    "format": {
      "dependencies": [
        "./workspaces/schema:format",
        "./workspaces/server:format",
        "./workspaces/client:format",
        "./workspaces/test:format"
      ]
    },
    "start": {
      "dependencies": [
        "./workspaces/server:start"
      ]
    },
    "build": {
      "dependencies": [
        "./workspaces/client:build"
      ]
    },
    "heroku-build": {
      "dependencies": [
        "build"
      ]
    },
    "heroku-cleanup": {
      "//": "Heroku の buildpacks サイズ削減のため、サーバー起動に必要ないものを削除します",
      "command": "rm -rf ./node_modules ./workspaces/*/.wireit ./workspaces/test && pnpm install --prod"
    },
    "heroku-start": {
      "dependencies": [
        "./workspaces/server:heroku-start"
      ]
    },
    "test": {
      "dependencies": [
        "./workspaces/test:test"
      ]
    }
  }
}
