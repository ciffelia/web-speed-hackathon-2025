{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "exactOptionalPropertyTypes": false,
    "experimentalDecorators": true,
    "jsx": "react-jsx",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@wsh-2025/server/*": ["./*"]
    },
    "skipLibCheck": true,
    "target": "ESNext"
  },
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*", "tools/**/*", "*.{js,mjs,cjs,jsx,ts,mts,cts,tsx}"],
  "references": [
    {
      "path": "../schema"
    },
    {
      "path": "../client"
    }
  ]
}
